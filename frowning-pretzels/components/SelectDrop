import React from 'react';
import { View, Text, StyleSheet } from 'react-native';

const SelectDropdownButton = ({ buttonText, isOpen, toggleDropdown }) => {
  return (
    <View style={styles.buttonContainer}>
      <Text style={styles.buttonText} onPress={toggleDropdown}>
        {buttonText}
      </Text>
      <Text style={styles.icon}>{isOpen ? '▲' : '▼'}</Text>
    </View>
  );
};

const styles = StyleSheet.create({
  buttonContainer: {
    flexDirection: 'row',
    alignItems: 'center',
    justifyContent: 'space-between',
    padding: 10,
    borderWidth: 1,
    borderColor: '#444',
    borderRadius: 8,
  },
  buttonText: {
    color: '#444',
  },
  icon: {
    fontSize: 20,
  },
});

export default SelectDropdownButton;